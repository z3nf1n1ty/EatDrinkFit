<h1>Hydration</h1>

<h2>Water</h2>

<h2>Fluid</h2>

<div class="row">
    <div class="col-lg-6">
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Manual Food Macros Form</h3>
            </div>
            <form>
                <div class="card-body">

                    <div class="form-group">
                        <label>Calories</label>
                        <input type="text" class="form-control" placeholder="Enter ...">
                    </div>

                    <div class="form-group">
                        <label>Total Fat</label>
                        <input type="text" class="form-control" placeholder="Enter ...">
                    </div>

                    <div class="form-group">
                        <label>Cholesterol</label>
                        <input type="text" class="form-control" placeholder="Enter ...">
                    </div>

                    <div class="form-group">
                        <label>Sodium</label>
                        <input type="text" class="form-control" placeholder="Enter ...">
                    </div>

                    <div class="form-group">
                        <label>Total Carbs</label>
                        <input type="text" class="form-control" placeholder="Enter ...">
                    </div>

                    <div class="form-group">
                        <label>Dietary Fiber</label>
                        <input type="text" class="form-control" placeholder="Enter ...">
                    </div>

                    <div class="form-group">
                        <label>Sugar</label>
                        <input type="text" class="form-control" placeholder="Enter ...">
                    </div>

                    <div class="form-group">
                        <label>Protein</label>
                        <input type="text" class="form-control" placeholder="Enter ...">
                    </div>

                    <div class="form-group">
                        <label>Note</label>
                        <input type="text" class="form-control" placeholder="Enter ...">
                    </div>

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Manual Water Intake Form</h3>
                    </div>
                    <form>
                        <div class="card-body">

                            <div class="btn-group form-group" aria-label="Unit Selection" data-toggle="buttons">
                                <label class="btn btn-info">
                                    <input type="radio" id="FLOZ" name="units" value="FLOZ" autofocus="true" hidden checked /> fl oz
                                </label>
                                <label class="btn btn-info">
                                    <input type="radio" id="ML" name="units" value="ML" hidden /> ml
                                </label>
                            </div>

                            <div class="form-group">
                                <label>Water Ammount</label>
                                <input type="text" class="form-control" placeholder="Enter ...">
                            </div>

                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Manual Fluids Intake Form</h3>
                    </div>
                    <form>
                        <div class="card-body">

                            <div class="btn-group form-group" aria-label="Unit Selection" data-toggle="buttons">
                                <label class="btn btn-warning">
                                    <input type="radio" id="FLOZ" name="units" value="FLOZ" autofocus="true" hidden checked /> fl oz
                                </label>
                                <label class="btn btn-warning">
                                    <input type="radio" id="ML" name="units" value="ML" hidden /> ml
                                </label>
                            </div>

                            <div class="form-group">
                                <label>Fluid Ammount</label>
                                <input type="text" class="form-control" placeholder="Enter ...">
                            </div>

                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
